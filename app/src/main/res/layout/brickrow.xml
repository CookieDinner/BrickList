<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/brickImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <Button
            android:id="@+id/addBrickButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:drawableTop="@drawable/ic_add_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/brickDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:width="180dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Brick\nBroken[color]"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/brickQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:width="0dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="0 of 0"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/removeBrickButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_marginStart="40dp"
            android:drawableTop="@drawable/ic_remove_black_24dp" />
    </LinearLayout>

</TableRow>